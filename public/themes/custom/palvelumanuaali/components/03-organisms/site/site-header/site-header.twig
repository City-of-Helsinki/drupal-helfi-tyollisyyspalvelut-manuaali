{% set header__base_class = 'header' %}
{# If `directory` is defined, set the path relative for Drupal.
 # Otherwise, set the path relative to the Component Library. #}

<header id="page-header" {{ bem(header__base_class) }}>
  <div {{ bem('inner', [], header__base_class) }}>
    <a href="#" id="toggle-expand" class="toggle-expand hide-desktop" aria-haspopup="true" aria-expanded="false">
      <span class="toggle-expand__open">
        {% include "@atoms/images/icons/_icon.twig" with {
          icon_base_class: "icon",
          icon_blockname: "toggle-expand",
          icon_name: "menu",
        } %}
      </span>
    </a>
    <div {{ bem('primary', [], header__base_class, ['d--flex--dsk']) }}>
  {% block header__branding %} {% endblock %}
      {% block header__menu %}
        {% include "@molecules/menus/main-menu/main-menu.twig" %}
      {% endblock %}
      <div class="hide-desktop mobile-user-menu">
        {{ drupal_block('user_login_block') }}
        {{ drupal_block('system_menu_block:account') }}
      </div>
    </div>
    <div {{ bem('secondary', [], header__base_class) }}>
      {% block header__breadcrumbs %}
        {% include "@molecules/menus/breadcrumbs/breadcrumbs.twig" %}
      {% endblock %}

    </div>
  </div>
</header>
